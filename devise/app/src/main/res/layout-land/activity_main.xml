<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:fontFamily="@font/starjedi"
    android:orientation="vertical"
    android:background="@drawable/tardis">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tDepart"
        android:textColor="@color/purple"
        app:fontFamily="@font/starjedi"
        />

        <Spinner
            android:id="@+id/SpinnerDepart"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tArrive"
        android:textColor="@color/purple"
        app:fontFamily="@font/starjedi"


        />

        <Spinner
            android:id="@+id/SpinnerArrivee"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="16dp"/>
    </LinearLayout>


    <EditText
        android:id="@+id/iMontant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tMontant"
        android:inputType="numberDecimal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <Button
            android:id="@+id/bConvert"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Convertir" />

        <Button
            android:id="@+id/bQuitt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quitter" />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>